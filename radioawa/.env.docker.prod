# Production Environment Variables for Docker
# Copy this file to .env.prod and update with your production values
# IMPORTANT: Change all passwords and secrets before deploying!

# Database Configuration
DB_HOST=postgres
DB_PORT=5432
DB_NAME=radioawa
DB_USER=radioawa
# CHANGE THIS PASSWORD IN PRODUCTION!
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION

# Backend Configuration
BACKEND_PORT=8081

# Frontend Configuration (default 80 for production)
FRONTEND_PORT=80

# CORS Configuration (comma-separated origins)
# Example: http://yourdomain.com,https://yourdomain.com
CORS_ALLOWED_ORIGINS=http://localhost,http://yourdomain.com
